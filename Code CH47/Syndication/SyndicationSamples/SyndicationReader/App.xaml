<Application x:Class="SyndicationReader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="SyndicationReader.xaml">
    <Application.Resources>
        <Style x:Key="listTitleStyle" TargetType="{x:Type ListBox}">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Border>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" >
                                    <GradientStop Offset="0.1" Color="HotPink" />
                                    <GradientStop Offset="0.9" Color="Red" />
                                </LinearGradientBrush>
                            </Border.Background>

                            <Label Content="{Binding Title.Text}" />
                        </Border>

                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
