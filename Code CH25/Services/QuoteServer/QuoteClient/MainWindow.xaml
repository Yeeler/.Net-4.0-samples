<Window x:Class="Wrox.ProCSharp.WinServices.QuoteClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quote Of The Day" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="30" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Button Margin="5" Name="buttonGetQuote" VerticalAlignment="Stretch" Grid.Row="0" Click="OnGetQuote">Get Quote</Button>
        <TextBox Margin="5" Name="textQuote" Grid.Row="1" TextWrapping="Wrap"></TextBox>
    </Grid>

</Window>
